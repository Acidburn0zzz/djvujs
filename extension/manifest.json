{
    "manifest_version": 2,
    "name": "DjVu.js Viewer",
    "short_name": "DV",
    "version": "0.1.3.0",
    "description": "Opens links to .djvu files in the browser (via context menu). Allows to open .djvu files from local storage.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "<all_urls>",
        "contextMenus"
    ],
    "icons": {
        "16": "djvu16.png",
        "32": "djvu32.png",
        "48": "djvu48.png",
        "64": "djvu64.png",
        "96": "djvu96.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "djvu16.png",
            "32": "djvu32.png",
            "48": "djvu48.png",
            "64": "djvu64.png",
            "96": "djvu96.png"
        }
    },
    "developer": {
        "name": "RussCoder",
        "url": "https://github.com/RussCoder/djvujs"
    }
}