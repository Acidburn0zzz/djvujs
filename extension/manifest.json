{
    "manifest_version": 2,
    "name": "DjVu.js Viewer",
    "short_name": "DV",
    "version": "0.2.4.2",
    "description": "Opens links to .djvu files. Allows to open .djvu files from a local disk. Processes djvu <object> & <embed> tags.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_security_policy": "script-src 'self' blob:; object-src 'self';",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "<all_urls>",
        "contextMenus"
    ],
    "icons": {
        "16": "djvu16.png",
        "32": "djvu32.png",
        "48": "djvu48.png",
        "64": "djvu64.png",
        "96": "djvu96.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "djvu16.png",
            "32": "djvu32.png",
            "48": "djvu48.png",
            "64": "djvu64.png",
            "96": "djvu96.png"
        }
    },
    "developer": {
        "name": "RussCoder",
        "url": "https://github.com/RussCoder/djvujs"
    }
}